<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nomad.nomadclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="Nomad" 
        android:theme="@android:style/Theme.NoTitleBar">
        <activity
            android:name=".NomadActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
		<activity android:label="@string/app_name" android:screenOrientation="portrait" android:name=".TruckPage"></activity>	
		<activity android:label="@string/app_name" android:screenOrientation="portrait" android:name=".Menu"></activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"/>	
    <uses-permission android:name="android.permission.CALL_PHONE"/>
		

</manifest>